<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/widget_item_toolbar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/img_custom_null"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_custom_null"
            />


        <com.hdfex.merchantqrshow.view.xlistView.XListView
            android:id="@+id/list_customer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@color/transparent"
            android:dividerHeight="0dp"
            android:scrollbars="none">
        </com.hdfex.merchantqrshow.view.xlistView.XListView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_height="match_parent"
            android:gravity="center"
            >
            <com.hdfex.merchantqrshow.view.LetterListView.LetterListView
                android:id="@+id/let_view"
                android:layout_width="25dip"
                android:layout_height="match_parent"
                android:layout_marginRight="2dp"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="7dp"
                />

        </LinearLayout>


        <ListView
            android:id="@+id/lisv_customer_search"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="45dp"
            android:background="@color/white"
            android:divider="@color/transparent"
            android:dividerHeight="0dp"
            android:visibility="gone"
            android:scrollbars="none">
        </ListView>
    </RelativeLayout>


</LinearLayout>