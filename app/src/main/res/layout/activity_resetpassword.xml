<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/background_gray"
    android:layout_height="match_parent">
    <include
        android:id="@+id/hd_toolbar"
        layout="@layout/widget_item_toolbar"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">



        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <EditText
                android:id="@+id/edt_new_password"
                style="@style/et_common_style"
                android:hint="请输入6-32位数字和字母的组合"
                android:textStyle="bold" />

            <TextView
                style="@style/tv_common_left_style"
                android:text="新密码" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <EditText
                android:id="@+id/edt_conform_password"
                style="@style/et_common_style"
                android:hint="请确认输入的新密码"
                android:textStyle="bold" />

            <TextView
                style="@style/tv_common_left_style"
                android:text="确认密码" />

        </FrameLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btn_submit"
        style="@style/button_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="保存" />
</LinearLayout>