<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="@color/white"
    android:layout_marginBottom="10dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txt_commityName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="商户名称一行显示不劝分两行，一行时字大点，两行时小点" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/txt_loanAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="分期金额：5330"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/txt_applyAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="（商品金额：6388）"
                android:textColor="@color/black_32"

                />

        </LinearLayout>

        <TextView
            android:id="@+id/txt_status"
            style="@style/txt_list_item_ul"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/blue_light"
            tools:text="已完成" />
    </LinearLayout>

    <ImageView
        style="@style/line"
        android:layout_height="1dp"
        android:layout_marginTop="10dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        >
        <TextView
            android:id="@+id/txt_applyDate"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            tools:text="2017-12-12:12:12:12"
            />
        <TextView
            android:id="@+id/txt_bizName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            tools:text="销售：XXX"
            />
    </LinearLayout>

</LinearLayout>