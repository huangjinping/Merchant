<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hdfex.merchantqrshow.salesman.order.activity.OrderListActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >


        <ImageView
            android:id="@+id/img_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:padding="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="15dp"
            android:src="@mipmap/ic_arrow_left" />

        <EditText
            android:id="@+id/edt_order_search"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="@drawable/bg_serch_edittext"
            android:drawableLeft="@mipmap/ic_search"
            android:drawablePadding="10dp"
            android:hint="输入客户姓名"
            android:imeOptions="actionSearch"
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/txt_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_alignParentRight="true"
            android:paddingLeft="10dp"
            android:paddingRight="20dp"
            android:layout_centerVertical="true"
            android:text="搜索" />
    </LinearLayout>



    <LinearLayout
        android:id="@+id/layout_search"
        android:layout_width="match_parent"
        android:layout_marginTop="50dp"
        android:layout_height="wrap_content">
        <ListView
            android:id="@+id/lisv_seatch_resoult"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="#c8c7cc"
            android:dividerHeight="1px"
            android:paddingLeft="10dp"></ListView>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/layout_content_view"
        android:layout_width="match_parent"
        android:layout_marginTop="50dp"
        android:visibility="gone"
        android:layout_height="match_parent"
        android:orientation="vertical"
        ></LinearLayout>
</RelativeLayout>
