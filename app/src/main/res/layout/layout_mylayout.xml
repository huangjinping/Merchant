<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="49dp"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/layout_tab0"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center">

        <TextView
            android:id="@+id/txt_tab_name0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="未提交"
            android:textColor="@color/txt_tablayout_color"
            android:textSize="12sp" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_tab1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"

        android:gravity="center">

        <TextView
            android:id="@+id/txt_tab_name1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="逾期中"

            android:textColor="@color/txt_tablayout_color"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_tab2"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"

        android:gravity="center">

        <TextView
            android:id="@+id/txt_tab_name2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="进行中"

            android:textColor="@color/txt_tablayout_color"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/img_tab_icon2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:src="@mipmap/ic_arrow_down"
            android:visibility="visible" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_tab3"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center">

        <TextView
            android:id="@+id/txt_tab_name3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="已结束"
            android:textColor="@color/txt_tablayout_color"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/img_tab_icon3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:src="@mipmap/ic_arrow_down"
            android:visibility="visible" />

    </LinearLayout>
</LinearLayout>