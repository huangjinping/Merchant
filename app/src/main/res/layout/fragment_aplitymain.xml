<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/background_gray"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/hd_toolbar"
        layout="@layout/widget_item_toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/layout_mayi_apliy"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="20dp"
                android:src="@mipmap/ic_mayi_apliy" />

            <TextView
                style="@style/txt_list_item_ul"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="花呗分期" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_receipt_money"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="20dp"
                android:src="@mipmap/ic_receipt_money" />

            <TextView
                style="@style/txt_list_item_ul"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="在线收款" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_receipt_card"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="20dp"
                android:src="@mipmap/ic_receipt_card" />
            <TextView
                style="@style/txt_list_item_ul"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="收款码" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:background="@color/white"
        >
        <LinearLayout
            android:id="@+id/layout_apliy_invitation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_aplipy_icon"
                android:scaleType="centerCrop"
                />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>