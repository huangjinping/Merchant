<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_marginTop="20px"
        android:padding="5dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/txt_custName"
                style="@style/txt_list_item_li"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                tools:text="张蕾" />
            <TextView
                android:id="@+id/txt_loanStatus"
                style="@style/txt_list_item_li"
                android:layout_width="0dp"
                android:gravity="right"
                android:textColor="@color/blue_light"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                tools:text="还款金额：1200" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/txt_psDueDt"
                style="@style/txt_list_item_li"
                android:layout_width="0dp"
                android:visibility="gone"
                android:textColor="@color/blue_light"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                tools:text="最后还款日：2017/10/10" />

        </LinearLayout>

        <TextView
            android:id="@+id/txt_commodityName"
            style="@style/txt_list_item_li"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="小区名/楼号/单元/楼层/房间号/房间标识"
            />

        <TextView
            android:id="@+id/txt_overDesc"
            style="@style/txt_list_item_li"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/ic_exclamatory_mark"
            tools:text="　重新提交合同"
            android:gravity="center_vertical"
            />
        <TextView
            android:id="@+id/txt_status"
            style="@style/txt_list_item_li"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:gravity="center_vertical"
            />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/line"
            />

        <TextView
            android:id="@+id/txt_followTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            tools:text="3小时未跟进"
            android:layout_gravity="right"
            android:textColor="@color/red_light"
            android:gravity="center"
            android:padding="5dp"
            />
    </LinearLayout>


</LinearLayout>