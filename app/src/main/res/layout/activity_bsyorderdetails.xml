<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_gray"
    android:orientation="vertical">

    <include layout="@layout/widget_item_toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/white"
                android:padding="5dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/txt_commodity_status"
                        style="@style/txtView_nomal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxEms="12"
                        android:singleLine="true"
                        android:textColor="@color/text_color2"
                        android:textSize="20dp"
                        tools:text="进行中" />

                    <TextView
                        android:id="@+id/txt_order_updateTime"
                        style="@style/txtView_nomal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_hint"
                        android:textSize="13dp"
                        tools:text="U408" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/img_order_logo"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="15dp"
                    android:src="@mipmap/ic_bsy_order_logo" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:padding="10dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/orderDetaildefaulttext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="收货人：" />

                <TextView
                    style="@style/orderDetaildefaulttext"
                    android:id="@+id/txt_customer_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    tools:text="梁老板" />

                <TextView
                    style="@style/orderDetaildefaulttext"
                    android:id="@+id/txt_customer_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="13234232312" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="10dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/orderDetaildefaulttext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="收货地址：" />

                <TextView
                    style="@style/orderDetaildefaulttext"
                    android:id="@+id/txt_address"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    tools:text="北京市海淀区中关村海淀大街国际创业中心B1-E1-E02-互动科技" />

            </LinearLayout>

            <ImageView style="@style/line" />

            <LinearLayout
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/layout_item_orderlist"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/img_order_pic"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginLeft="15dp"
                        android:src="@mipmap/ic_defoult" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txt_commodity_name"
                            style="@style/txtView_nomal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxEms="12"
                            android:singleLine="true"
                            android:textColor="@color/text_color2"
                            android:textSize="15dp"
                            tools:text="超滤台上净水机" />

                        <TextView
                            android:id="@+id/txt_product_id"
                            style="@style/txtView_nomal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_hint"
                            android:textSize="13dp"
                            tools:text="U408" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerVertical="true"
                            android:layout_marginTop="5dp"
                            android:gravity="bottom"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/txt_product_status"
                                style="@style/txtView_nomal"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textColor="@color/text_hint"
                                android:textSize="13dp"
                                tools:text="库存1000" />

                            <TextView
                                style="@style/txtView_nomal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="￥"
                                android:textColor="@color/yellow_light"
                                android:textSize="10dp" />

                            <TextView
                                android:id="@+id/txt_amount"
                                style="@style/txtView_nomal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="15dp"
                                android:textColor="@color/yellow_light"
                                android:textSize="15dp"
                                android:textStyle="bold" />
                        </LinearLayout>

                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp" />
            <!--订单信息-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <ImageView style="@style/line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_order_title"
                        style="@style/orderDetaildefaulttext"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:gravity="center_vertical"
                        android:text="订单信息"
                        android:textSize="15dp"
                        android:textStyle="bold" />

                    <ImageView style="@style/line" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="14dp"
                        android:layout_marginTop="18dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_order_number_title"
                            style="@style/orderDetaildefaulttext"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="订单编号：" />

                        <TextView
                            android:id="@+id/tv_order_number"
                            style="@style/orderDetaildefaulttext"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="18dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_time_title"
                            style="@style/orderDetaildefaulttext"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="下单时间：" />

                        <TextView
                            android:id="@+id/tv_time"
                            style="@style/orderDetaildefaulttext"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="18dp"
                        android:visibility="gone"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/orderDetaildefaulttext"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="配送方式：" />

                        <TextView
                            android:id="@+id/tv_send_type"
                            style="@style/orderDetaildefaulttext"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="现款后货" />

                    </LinearLayout>
                </LinearLayout>

                <ImageView style="@style/line" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:background="@color/white"
                android:orientation="vertical">

                <ImageView style="@style/line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:orientation="vertical">

                    <TextView
                        style="@style/orderDetaildefaulttext"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:gravity="center_vertical"
                        android:text="付款信息"
                        android:textSize="15dp"
                        android:textStyle="bold" />

                    <ImageView style="@style/line" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="14dp"
                        android:layout_marginTop="18dp"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/orderDetaildefaulttext"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="订单编号：" />

                        <TextView
                            style="@style/orderDetaildefaulttext"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="" />

                    </LinearLayout>


                </LinearLayout>

                <ImageView style="@style/line" />
            </LinearLayout>


        </LinearLayout>
    </ScrollView>
</LinearLayout>






















