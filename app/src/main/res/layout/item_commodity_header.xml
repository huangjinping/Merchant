<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">
    <!--审核信息-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_status"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:gravity="center"
                android:text="审核中"
                android:textColor="@color/blue_light"
                android:textSize="17dp"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="22dp"
                        android:orientation="horizontal">



                        <TextView
                            android:id="@+id/tv_name"
                            style="@style/orderDetaildefaulttext"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="是你的" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="22dp"
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal">



                        <TextView
                            android:id="@+id/tv_telephone"
                            style="@style/orderDetaildefaulttext"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            tools:text="123123123" />

                    </LinearLayout>
                </LinearLayout>

                <ImageView
                    android:id="@+id/img_call"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="53dp"
                    android:layout_centerVertical="true"
                    android:elevation="0dp"
                    android:textColor="@color/text_color3"
                    android:gravity="center"
                    android:src="@mipmap/ic_order_phone"
                    android:textSize="12dp" />

            </RelativeLayout>


        </LinearLayout>

        <ImageView style="@style/line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    style="@style/orderDetaildefaulttext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="14dp"
                    android:layout_marginTop="18dp"
                    android:gravity="center_horizontal"
                    android:text="申请总价" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/orderDetaildefaulttext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="￥"
                        android:textSize="10dp" />

                    <TextView
                        android:id="@+id/tv_total_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="930"
                        style="@style/orderDetaildefaulttext"
                        android:textSize="15dp"

                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    style="@style/orderDetaildefaulttext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="14dp"
                    android:layout_marginTop="18dp"
                    android:gravity="center"
                    android:text="首付金额" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="￥"
                        android:textColor="@color/text_color3"
                        android:textSize="10dp" />

                    <TextView
                        android:id="@+id/tv_down_playment"
                        style="@style/orderDetaildefaulttext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="1323.0"
                        android:textSize="15dp"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <ImageView style="@style/line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                style="@style/orderDetaildefaulttext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="分期金额：" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/orderDetaildefaulttext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/yellow_light"
                    android:text="￥"
                    android:textSize="11dp" />

                <TextView
                    android:id="@+id/tv_period_amount"
                    style="@style/orderDetaildefaulttext"
                    android:layout_width="wrap_content"
                    android:textColor="@color/yellow_light"
                    android:layout_height="wrap_content"
                    tools:text="1323" />
            </LinearLayout>


            <TextView
                style="@style/orderDetaildefaulttext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/yellow_light"
                android:text=" x " />

            <TextView
                android:id="@+id/tv_duration"
                style="@style/orderDetaildefaulttext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/yellow_light"

                tools:text="3" />

            <TextView
                style="@style/orderDetaildefaulttext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/yellow_light"
                android:text="期" />
        </LinearLayout>

        <ImageView style="@style/line" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <ImageView style="@style/line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                style="@style/orderDetaildefaulttext"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_weight="1"
                android:text="商品信息"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_total_number"
                style="@style/orderDetaildefaulttext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="12dp"
                android:visibility="invisible"
                android:text=""
                android:textSize="12dp" />

        </LinearLayout>

        <ImageView
            style="@style/line"
            android:layout_marginLeft="12dp" />
    </LinearLayout>


</LinearLayout>