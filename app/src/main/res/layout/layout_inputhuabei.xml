<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_input_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="请输入剩余金额"
                android:textColor="@color/text_installment"
                android:textSize="17dp"
                android:textStyle="bold" />


        </LinearLayout>

        <TextView
            android:id="@+id/txt_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="关闭"
            android:textColor="@color/blue_light" />


    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/white"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <TextView
            android:id="@+id/txt_account_title"
            style="@style/tv_common_left_style"
            android:layout_centerVertical="true"
            android:text="商品金额　　" />


        <EditText
            android:id="@+id/txt_account"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@color/transparent"
            android:ellipsize="end"
            android:inputType="numberDecimal"
            android:maxLength="8"
            android:maxLines="1"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:text="输入的是总钱数" />

            <TextView
                android:textColor="@color/blue_light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="(此为商户实收金额)"
                />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/layout_order_duration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"

        >

        <TextView
            style="@style/tv_common_left_style"
            android:layout_centerVertical="true"
            android:text="分期期数　　" />

        <EditText
            android:id="@+id/edt_order_duration"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:focusable="false"
            android:hint="请选择花呗分期方案"
            android:maxLength="8"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:src="@mipmap/ic_arrow_right" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_feeAmount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/white"
        android:paddingLeft="20dp"
        android:paddingRight="5dp">

        <TextView
            style="@style/tv_common_left_style"
            android:layout_centerVertical="true"
            android:text="客户分期总额" />


        <TextView
            android:id="@+id/txt_feeAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:focusable="false"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold"
            tools:text="1234123412341234123412341234" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_plan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:layout_margin="3dp"
            android:background="@color/gray_30"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:padding="10dp"
            android:textSize="12sp"

            android:paddingTop="5dp"
            android:text="还款计划"
            android:textColor="@color/white"
            android:visibility="gone" />

        <TextView
            android:id="@+id/txt_apply_scan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="3dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="10dp"
            android:textSize="12sp"
            android:padding="10dp"
            android:layout_weight="1"
            android:background="@color/blue_light"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:text="扫支付宝付款码"
            android:textColor="@color/white" />


        <TextView
            android:id="@+id/txt_scan_pic"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="3dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:layout_weight="1"
            android:background="@color/blue_light"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="30dp"
            android:textSize="12sp"

            android:paddingTop="5dp"
            android:text="生成二维码"
            android:textColor="@color/white" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="@color/white"
        android:orientation="vertical">

        <ImageView style="@style/line" />

        <com.hdfex.merchantqrshow.view.virtualKeyboard.VirtualKeyboardView
            android:id="@+id/vk_keyboard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:visibility="invisible" />
    </LinearLayout>
</LinearLayout>