<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="10dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">

        <TextView
            android:id="@+id/txt_courtName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="小区名" />

        <TextView
            android:id="@+id/txt_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_address"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="5dp"
            tools:text="1号楼、2" />

        <TextView
            android:id="@+id/txt_turnType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            tools:text="转单中" />
    </LinearLayout>

    <TextView
        android:id="@+id/txt_subscribeDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="5dp"
        tools:text="2017/6/28(周三) 15时间30分 预约" />

    <ImageView
        style="@style/line"
        android:layout_width="match_parent"
        android:layout_height="0.3dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_bizName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="5dp"
            tools:text="自己" />

        <TextView
            android:id="@+id/txt_followTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textColor="@color/red_light"
            tools:text="16分钟未跟进" />
    </LinearLayout>

    <TextView
        android:id="@+id/txt_turnDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="5dp"
        android:visibility="gone"
        tools:text="当天有其他事情，帮助接待下这个客户，兄弟" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/txt_accept"
            style="@style/btn_list_item_blue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="接受"
            android:textColor="@color/blue_light"
            android:visibility="gone" />

        <TextView
            android:id="@+id/txt_rushOrder"
            style="@style/btn_list_item_blue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="抢单"
            android:textColor="@color/blue_light"
            android:visibility="gone" />


        <TextView
            android:id="@+id/txt_turn"
            style="@style/btn_list_item_blue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="转单"
            android:textColor="@color/blue_light"
            android:visibility="gone" />

        <TextView
            android:id="@+id/txt_refuse"
            style="@style/btn_list_item_gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="不感兴趣"
            android:textColor="@color/text_cart"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>